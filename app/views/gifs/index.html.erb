<h1 class="text-3xl text-center font-bold uppercase py-12">Gifs</h1>

<div class="container mx-auto mt-10 flex flex=wrap justify-center">
  <% @gifs.each do |gif| %>
    <div class="w-64 m-2 border rounded shadow">
      <%= link_to image_tag(gif.image_url, class: "mx-auto"), gif %>
      <div class="p-2 text-sm text-center">
        <%= link_to linked_tag_list gif %>
      </div>
    </div>
  <% end %>
</div>
